/* pages/weclone/weclone.wxss */

page {
    height: 100%;
    background-color: #b3d4db;
}

.user-avatar {
    display: flex;
    flex-direction: column;
    /* 垂直居中 */
    align-items:center;
}

.user-avatar image {
    width: 200rpx;
    height: 200rpx;
    margin-top: 160rpx;
}

.user-name {
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 80rpx;
}

.moto-contarn {
    border: 1px solid #405f80;
    height: 80rpx;
    width: 200rpx;
    border-radius: 5px;
    text-align: center;
    margin-top: 200rpx;
}

.moto {
    font-size: 22rpx;
    line-height: 80rpx;
    font-weight: bold;
    color: #405f80;
}
