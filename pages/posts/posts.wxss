/* pages/posts/posts.wxss */
swiper {
    width: 100%;
    height: 600rpx;
}

swiper-item image {
    width: 100%;
    height: 600rpx;
}

.posts-container {
    display: flex;
    flex-direction: column;
    background-color: #ffffff;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
    padding-bottom: 10rpx;
}

.post-author-data {
    padding: 10rpx 0 20rpx 10rpx;
    /* flex布局图片与文字是剧中 */
    display: flex;
    flex-direction: row;
    align-items: center;
}

.post-author-data image {
    width: 60rpx;
    height: 60rpx;
    /* vertical-align: middle; */
}

.post-author-data text {
    font-size: 16px;
    color: #333333;
    margin-left: 20rpx;
    /* vertical-align: middle; */
}

.posts-text {
    font-size: 34rpx;
    font-weight: 600;
    margin-bottom: 10px;
    margin-left: 10px;
    color: #333333;
}

.posts-images {
    width: 100%;
    height: 340rpx;
    margin-bottom: 10px;
}

.posts-text-content {
    font-size: 28rpx;
    color: #666666;
    letter-spacing: 2rpx;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
}

.posts-like {
    font-size: 26rpx;
    margin-left: 20rpx;
}

.post-like-item {
    display: inline-block;
    margin-right: 40rpx;
}

.post-like-item image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 16rpx;
    vertical-align: middle;
}

.post-like-item text {
    vertical-align: middle;
}